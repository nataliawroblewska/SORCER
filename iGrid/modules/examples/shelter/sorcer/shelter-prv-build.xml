<project name="Partner Shelter" default="all" basedir=".">
	<property name="module.name" value="shelter" />
	<property name="module.run.dir" value="shelter" />

	<!-- set global properties -->
	<import file="../../../common-build.xml" />
	<property name="src" value="./src" />
	<property name="resources" value="./resources" />

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/shelter/**/*.java" />
		<exclude name="**/SAVE/*.java" />
		<exclude name="**/BAK/*.java" />
	</patternset>

	<fileset dir="${resources}" id="icons">
		<include name="sorcer.jpg" />
	</fileset>

	<patternset id="ant.classes">
		<include name="sorcer/provider/**/*.class" />
	</patternset>

	<patternset id="ant.jars">
		<include name="partner-shelter-cc.jar" />
		<include name="jeri-shelter.jar" />
		<include name="jeri-shelter-dl.jar" />
		<include name="shelter-ui.jar" />
		<!--	<include name="shelter-mvc-ui.jar" /> -->
		<include name="shelter-requestor.jar" />
		<include name="shelter-requestor-dl.jar" />
	</patternset>

	<path id="project.classpath">
		<pathelement location="${classes}" />
		<pathelement location="${sorcer.lib}/sorcer.jar" />
		<pathelement location="${support.lib}/junit.jar" />
		<path refid="jini.path" />
		<path refid="rio.path" />
	</path>

	<path id="javadocs.classpath">
		<pathelement location="${common.lib}/rio/serviceui-1.1a.jar" />
		<pathelement location="${common.lib}rio//ant-ext.jar" />
		<pathelement location="${ant.home}/lib/ant.jar" />
	</path>

	<!-- No RMI stubs are required for JERI type of providers <target name="shelter" depends="jeri-shelter.jar, jeri-shelter-dl.jar, shelter-ui.jar, shelter-mvc-ui.jar, shelter-requestor.jar, shelter-requestor-dl.jar" />
	-->
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="shelter, copy-run-prv-files" />
	<target name="shelter" depends="jeri-shelter.jar, jeri-shelter-dl.jar, shelter-ui.jar, shelter-requestor.jar, shelter-requestor-dl.jar" />
	<target name="all" depends="prepare, jars" />

	<target name="shelter-requestor.jar">
		<classdepandjar jarfile="${sorcer.lib}/shelter-requestor.jar" files="true">
			<classpath refid="project.classpath" />
			<in name="sorcer.shelter" />
			<topclass name="sorcer.shelter.requestor.ShelterTester" />
			<fileset dir="${iGrid.home}/configs" includes="sorcer/util/sorcer.env" />
		</classdepandjar>
	</target>

	<target name="shelter-requestor-dl.jar">
		<classdepandjar jarfile="${sorcer.lib}/shelter-requestor-dl.jar" files="true">
			<classpath refid="project.classpath" />
			<in name="sorcer.shelter.provider" />
			<topclass name="sorcer.shelter.provider.ShelterImpl" />
			<topclass name="sorcer.shelter.provider.ServiceShelter" />
		</classdepandjar>
	</target>

	<target name="jeri-shelter.jar" depends="compile">
		<classdepandjar jarfile="${sorcer.lib}/jeri-shelter.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.shelter.provider" />
			<topclass name="sorcer.shelter.provider.ShelterProvider" />
			<topclass name="sorcer.shelter.provider.ui.ShelterUI" />
		<!--	<topclass name="sorcer.shelter.provider.ui.mvc.ShelterView" /> -->
			<topclass name="sorcer.shelter.provider.ServiceShelter" />
			<fileset dir="${iGrid.home}/configs">
				<filename name="sorcer/util/sorcer.env" />
				<filename name="sorcer/util/data.formats" />
			</fileset>
			<fileset refid="icons" />
		</classdepandjar>
	</target>

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="jeri-shelter-dl.jar" depends="compile">
		<classdepandjar jarfile="${sorcer-dl.lib}/jeri-shelter-dl.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.shelter.provider" />
			<topclass name="sorcer.shelter.provider.Shelter" />
			<topclass name="sorcer.shelter.provider.ServiceShelter" />
			<fileset refid="icons" />
		</classdepandjar>
	</target>

	<target name="shelter-ui.jar">
		<classdepandjar jarfile="${sorcer-dl.lib}/shelter-ui.jar" files="true">
			<classpath refid="project.classpath" />
			<in name="sorcer.shelter" />
			<in name="sorcer.ui" />
			<topclass name="sorcer.shelter.provider.ui.ShelterUI" />
			<topclass name="sorcer.ui.serviceui.UIComponentFactory" />
		</classdepandjar>
	</target>
<!--
	<target name="shelter-mvc-ui.jar">
		<classdepandjar jarfile="${sorcer-dl.lib}/shelter-mvc-ui.jar" files="true">
			<classpath refid="project.classpath" />
			<in name="sorcer.shelter" />
			<in name="sorcer.ui" />
			<topclass name="sorcer.shelter.provider.ui.mvc.ShelterView" />
			<topclass name="sorcer.ui.serviceui.UIComponentFactory" />
		</classdepandjar>
	</target>
	-->

	<target name="docs" depends="prepare, compile">
		<javadoc packagenames="org.jini.rio.tools.ant.*" maxmemory="100M" sourcepath="${src}" destdir="${docs}/api" Author="true" Version="true" Use="true" windowtitle="Arithmetic Examples" doctitle="&lt;h1&gt;Arithmetic Examples;/h1&gt;" bottom="&lt;i&gt;Copyright (c) 2002-2006 Texas tech University, All Rights Reserved.&lt;/i&gt;">
			<group title="Partner Shelter Example" packages="sorcer.provider.shelter.*" />
			<classpath refid="project.classpath" />
		</javadoc>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/configs" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/policy" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/logs" />
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" perm="755" includes="*.sh" />
	</target>

</project>
